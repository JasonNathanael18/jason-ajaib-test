<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemUser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/labelUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="jasonnathanael"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivThumbnail"
        app:layout_constraintTop_toTopOf="@id/ivThumbnail"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/labelUserId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/labelUserName"
        app:layout_constraintStart_toEndOf="@id/labelUserName"
        app:layout_constraintTop_toTopOf="@+id/labelUserName"
        tools:text="jasonnathanael18"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/labelBio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/labelUserName"
        app:layout_constraintTop_toBottomOf="@id/labelUserName"
        tools:text="jasonnathanael bio" />

    <TextView
        android:id="@+id/labelLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/labelUserName"
        app:layout_constraintTop_toBottomOf="@+id/labelBio"
        tools:text="location"/>

    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/labelLocation"
        app:layout_constraintTop_toTopOf="@+id/labelLocation"
        tools:text="email" />

</androidx.constraintlayout.widget.ConstraintLayout>